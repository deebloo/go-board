{
  "name": "go-board",
  "version": "3.0.3",
  "private": false,
  "description": "Go board",
  "type": "module",
  "main": "./target/libs.js",
  "module": "./target/libs.js",
  "exports": {
    "./*": {
      "import": "./target/*"
    }
  },
  "files": [
    "target",
    "public/sfx",
    "public/textures",
    "public/go-board.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deebloo/go-board.git"
  },
  "keywords": [],
  "author": "deebloo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deebloo/go-board/issues"
  },
  "scripts": {
    "start": "wireit",
    "build": "wireit",
    "test": "wireit",
    "format": "prettier --write \"src/**/*.{ts,js,json,css}\""
  },
  "wireit": {
    "start": {
      "command": "serve -p 6400",
      "service": true,
      "dependencies": [
        {
          "script": "tsc",
          "cascade": false
        }
      ]
    },
    "build": {
      "dependencies": [
        "tsc",
        "bundle"
      ]
    },
    "tsc": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "output": [
        "target/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "bundle": {
      "command": "esbuild target/define.js --bundle --minify --outfile=./public/go-board.min.js",
      "files": [
        "target/**"
      ],
      "output": [
        "public/go-board.min.js"
      ],
      "dependencies": [
        {
          "script": "tsc",
          "cascade": false
        }
      ]
    },
    "test": {
      "command": "wtr --config wtr.config.mjs",
      "files": [
        "target/**"
      ],
      "dependencies": [
        {
          "script": "tsc",
          "cascade": false
        }
      ]
    }
  },
  "dependencies": {
    "@joist/di": "4.2.4-next.5",
    "@joist/element": "4.2.4-next.5",
    "@joist/observable": "4.2.4-next.5",
    "@joist/templating": "4.2.4-next.5",
    "tslib": "^2.5.2"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.1",
    "@web/test-runner": "^0.19.0",
    "esbuild": "0.25.1",
    "prettier": "^3.2.5",
    "serve": "^14.2.4",
    "typescript": "^5.7.3",
    "wireit": "^0.14.9"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.41.1"
  }
}
